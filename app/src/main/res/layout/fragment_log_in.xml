<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.administrator.mynews.view.LogInFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="请输入用户名"
        android:textSize="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edit2"

        android:id="@+id/used_name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:hint="密码:6~16个字符"
        android:background="@drawable/edit2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/used_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        android:id="@+id/edit_passed"/>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_below="@id/edit_passed"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_marginLeft="4dp"
            style="@style/Button"


            android:id="@+id/button2"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            style="@style/Button"

            android:layout_marginLeft="4dp"
            android:id="@+id/btn_forget"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登陆"
            style="@style/Button"
            android:layout_marginLeft="4dp"

            android:id="@+id/btn_login"/>


    </LinearLayout>








</RelativeLayout>
